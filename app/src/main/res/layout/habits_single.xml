<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#81719F"
    android:backgroundTint="#9D89BF"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:rotationX="0"
    android:rotationY="0"
    app:barrierMargin="20dp">

    <Button
        android:id="@+id/positiveButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:insetBottom="12dp"
        android:text="Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textlinearlayout" />

    <Button
        android:id="@+id/negativeButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:insetBottom="12dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="@+id/positiveButton"
        app:layout_constraintStart_toEndOf="@+id/positiveButton"
        app:layout_constraintTop_toTopOf="@+id/positiveButton"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/textlinearlayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="95dp"
        android:layout_marginEnd="96dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Test para ver que este bien la cosa pero son dos lineas"
            tools:layout_editor_absoluteX="176dp"
            tools:layout_editor_absoluteY="7dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>